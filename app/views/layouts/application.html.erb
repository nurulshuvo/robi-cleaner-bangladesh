<!DOCTYPE html>
<html>
<head>
  <title>Clean Bangladesh</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
<% if current_user %>
<script type="text/javascript">
    function myFunction()
    {
        var status;
        setInterval(function(){
            var request = $.ajax({
                url: "/facebook/not_liked_page",
                type: "get",
                dataType: "text",
                success: function(msg){
                   status = msg
                    <%
                         @graph = Koala::Facebook::GraphAPI.new(current_user.token_field)
                         @value = !@graph.get_connections("me","likes/389390171126904").empty?
                    %>
                   if (status == 'true')
                   {
                       var page_status = $('p#status').text()
                       if (page_status != status)
                       {
                           window.location = "<%= request.protocol %>www.facebook.com/leuviana.it/app_432648530105201"
                       }
                   }
                    else
                   {
                       var page_status = $('p#status').text()
                       if (page_status != status)
                       {
                           window.location = "<%= root_url %>"
                       }
                   }
                }
            })
        },5000);
    }

    $(document).ready(function(){
        myFunction();
    })
</script>
<style type="text/css">
    body{
        font-family: axiata_book_bookregular;!important
    }

</style>
<% end %>
<div id="total" style="">
<% if like_client_page?  %>
    <p id="status" style="display: none">true</p>
    <%= yield %>
<% else %>
      <p id="status" style="display: none">false</p>
      <div id="wrap">

        <div class="corner">
          <img src="<%= image_path 'corner_image.png' %>" />
        </div><!--end of corner-->
        <div id="like" style="padding: 10px;!important">
          <%=image_tag("like.png")%>
        </div>
        <div class="header">
          <img src="<%= image_path 'first_header.png' %>" />
        </div><!--end of header-->

        <div class="content">
          <img src="<%= image_path 'first_content.png' %>" />
        </div><!--end of content-->

        <div class="footer">

        </div><!--end of logo-->

      </div><!--end of wrap-->
<% end %>
</div>
</body>
</html>
