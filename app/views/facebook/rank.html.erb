<style type="text/css">
  .part{width: 500px; float: left; height: auto;}
   table tr td{
       border: 1px solid  #0081c2; padding: 10px;
   }
   .clear{clear: both; height: 10px;}
</style>
<center>
<p>Total User:<strong> <%= User.count %></strong></p>
<p>Total Invited:<strong> <%= Invitee.count %></strong></p>
<p>*<strong> <%= @unique %></strong></p>
</center>
<div class="clear"></div>
<div class="part">
<center>
  <h2>Rank</h2>
  <table>
   <tr>
     <td>Rank</td>
     <td>Name</td>
     <td>Point</td>
   </tr>
  <% @users.each_with_index do |user, i|  %>
    <tr>
      <td><%= i+1 %></td>
      <td><%= user.name %></td>
      <td><%= user.point %></td>
    </tr>
  <% end %>
  </table>
</center>
</div>

<div class="part">
<center>
  <table>
    <h2>By Last Attampt</h2>
   <tr>
     <td>Rank</td>
     <td>Name</td>
     <td>Point</td>
     <td>Invited</td>
     <td>Last Attempt</td>
     <td>Last Game Clicks</td>
     <td>total Clicks</td>
   </tr>
  <% @users_a.each_with_index do |user, i|  %>
    <tr>
      <td><%= i+1 %></td>
      <td><%= user.name %></td>
      <td><%= user.point %></td>
      <td><%= user.invitees.size %></td>
      <td><%= time_ago_in_words(user.updated_at) %></td>
      <td><%= user.click_count %></td>
      <td><%= user.total_click %></td>
    </tr>
  <% end %>
  </table>
</center>
</div>