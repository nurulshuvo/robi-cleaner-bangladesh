
<div id="wrap">
  <div class="content">
    <div id="fb-root"></div>
    <script src="http://connect.facebook.net/en_US/all.js"></script>
    <p>
      <input type="button"
             onclick="sendRequestViaMultiFriendSelector(); return false;"
             value="Send Request to Many Users with MFS"
      />
    </p>

    <script>
        FB.init({
            appId  : '432648530105201',
            frictionlessRequests: true
        });

        function sendRequestViaMultiFriendSelector() {
            FB.ui({method: 'apprequests',
                message: 'My Great Request'
            }, requestCallback);
        }

        function requestCallback(response) {
             if (response.to.length >= 20)
             window.location = '/facebook/post_invitation_process?to='+response.to
             else
             alert("You should invite only 20 friends")
        }
    </script>
   <%=image_tag("content.png")%>
  </div><!--end of content-->
  <div class="logo">
    <div class="next"><a href="#"><%=image_tag("next.png",:border=>"0")%></a></div>
    <!--end of next-->
  </div><!--end of logo-->
</div><!--end of wrap-->

